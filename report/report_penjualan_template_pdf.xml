<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_penjualan_template_pdf">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="header">
                            <h1 style="text-align: center; color: #4CAF50;">Sales Report</h1>
                            <h2 style="text-align: center; color: #555;">Summary of Sales Transactions</h2>
                        </div>
                        <div class="content" style="margin-top: 30px;">
                            <table class="table table-sm table-hover" style="width: 100%; border-collapse: collapse;">
                                <thead>
                                    <tr style="background-color: #f2f2f2;">
                                        <th style="padding: 10px; border: 1px solid #ddd;">Customer</th>
                                        <th style="padding: 10px; border: 1px solid #ddd;">Quantity</th>
                                        <th style="padding: 10px; border: 1px solid #ddd;">Product Name</th>
                                        <th style="padding: 10px; border: 1px solid #ddd;">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.order_line_ids" t-as="line">
                                        <tr>
                                            <td style="padding: 10px; border: 1px solid #ddd;"><span t-field="line.order_id.customer_name"/></td>
                                            <td style="padding: 10px; border: 1px solid #ddd; text-align: right;"><span t-field="line.quantity"/></td>
                                            <td style="padding: 10px; border: 1px solid #ddd; text-align: right;"><span t-field="line.product_name_id.name"/></td>
                                            <td style="padding: 10px; border: 1px solid #ddd; text-align: right;"><span t-field="line.subtotal"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="3" style="padding: 10px; border: 1px solid #ddd; text-align: right;"><strong>Total</strong></td>
                                        <td style="padding: 10px; border: 1px solid #ddd; text-align: right;"><span t-field="o.total_amount"/></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <div class="footer" style="margin-top: 50px; text-align: center;">
                            <p style="color: #555;">Generated by Odoo | Date: <span t-field="o.order_date"/></p>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
